@model CignaInsurance.ViewModels.AccountDetailsViewModel
@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<html lang="en">
    <head>
        <!--Styles-->
        <link href="~/Content/bootstrap.css" rel="stylesheet" />
        <style>
            table {
                margin-bottom:auto;
                margin-top:auto;
                margin-left:auto;
                margin-right:auto;
                border-collapse:collapse;
                
                }
            td {
                padding-left:1em;

                padding-bottom:1em;
                }
            tr{

            }
            #sidebar li{
                margin:15px 0;
            }
           #sidebar a{
                width:400px;
            }

        </style>
    </head>
    <body>
        <!--Content-->
        <div>

            @section list{
            <div style="display:inline-block; margin-top:100px;" id="sidebar">
                <ul style="list-style-type:none">
                    <li>
                        <a href="@Url.Action("DoctorDetail", "Account")" class="btn btn-default">
                            Check Doctor's Detail
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("PlanDetail", "Account")" class="btn btn-default">
                            Check Current Plan's Detail
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("DeclareClaim", "Account")" class="btn btn-default">
                            Declare A Claim
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Claims", "Account")" class="btn btn-default">
                            Check Current Claim's Status
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("UpdateAccount", "Account")" class="btn btn-default">
                            Update your Personal Infomation
                        </a>
                    </li>
                </ul>
            </div>
                }

            <div style="display:inline-block; margin-left:200px; margin-top:100px;">
                <table>
                    <tr>
                        <td><b>Name</b></td>
                        <td>@Html.DisplayFor(model => model.CustomerDetails.Firstname)</td>
                    </tr>
                    <tr>
                        <td><b>Last Name</b></td>
                        <td>@Html.DisplayFor(model => model.CustomerDetails.Lastname)</td>
                    </tr>
                    <tr>
                        <td><b>Gender</b></td>
                        <td>
                            @if (Model.CustomerDetails.Gender)
                            {
                                <p style="margin:0;">Male</p>
                            }
                            else
                            {
                                <p style="margin:0;">Female</p>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td><b>Day of Birth</b></td>
                        <td>@Html.DisplayFor(model => model.CustomerDetails.DateofBirth)</td>
                    </tr>
                    <tr>
                        <td><b>Address</b></td>
                        <td>@Html.DisplayFor(model => model.CustomerDetails.Address)</td>
                    </tr>
                    <tr>
                        <td><b>City</b></td>
                        <td>@ViewBag.City</td>
                    </tr>
                    <tr>
                        <td><b>State</b></td>
                        <td>@ViewBag.State</td>
                    </tr>
                    <tr>
                        <td><b>Zip-Code</b></td>
                        <td>@Html.DisplayFor(model => model.CustomerDetails.Zip)</td>
                    </tr>
                    <tr>
                        <td><b>Phone</b></td>
                        <td>@Html.DisplayFor(model => model.CustomerDetails.Phone)</td>
                    </tr>
                    <tr>
                        <td><b>Email</b></td>
                        <td>@Html.DisplayTextFor(model => model.CustomerDetails.Email)</td>
                    </tr>
                    <tr>
                        <td><b>SSN</b></td>
                        <td>@Html.DisplayFor(model => model.CustomerDetails.SSN)</td>
                    </tr>
                </table>
            </div>
        </div>
        <!--Scriptslr-->
        <script src="~/Scripts/jquery-1.10.2.js"></script>
        <script src="~/Scripts/bootstrap.js"></script>
    </body>
</html>
    
