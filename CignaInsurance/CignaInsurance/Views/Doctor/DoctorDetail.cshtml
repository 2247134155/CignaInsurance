@model System.Collections.Generic.IEnumerable<CignaInsurance.Models.DoctorViewModel>

@{
    ViewBag.Title = "DoctorDetail";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<link rel="stylesheet" href="http://www.w3schools.com/lib/w3.css">
<link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/bootstrap/js/bootstrap.min.js"></script>

<style type="text/css">
    body {
        background-color: greenyellow;
        text-align: center;
        font-size: 17px;
    }




    span {
        float: left;
        width: 120px;
        margin-left: 18%;
    }
</style>

<body>
    <h2 class="h2">DoctorDetail</h2>

    @foreach (var doctor in Model)
    {
        <div class="container">
            <div class="w3-card-4" style="width:70%">
                <header class="w3-container w3-light-grey">
                    <h3>@Html.DisplayFor(m => doctor.doc.Firstname)</h3>
                </header>
                <div class="w3-container">
                    <span>ID: </span>
                    <td>@Html.DisplayFor(m => doctor.doc.DoctorID)</td>
                    <br />
                    <span>Type: </span>
                    <td>@Html.DisplayFor(m => doctor.doc.DoctorType)</td>
                    <br />
                    <span>Address: </span>
                    <td>@Html.DisplayFor(m => doctor.doc.Address)</td>
                    <br />
                    <span>Phone#: </span>
                    <td>@Html.DisplayFor(m => doctor.doc.Phone)</td>
                    <br />
                    <span>Email: </span>
                    <td>@Html.DisplayFor(m => doctor.doc.Email)</td>
                    <br />
                    <span>City: </span>
                    <td>@Html.DisplayFor(m => doctor.citys.CityName)</td>
                    <br />
                    <span>State: </span>
                    <td>@Html.DisplayFor(m => doctor.states.StateName)</td>
                    <br />
                </div>
                <br />
                <button class="w3-btn-block" style="background-color:lightgrey" onclick="location.href='@Url.Action("FinishChooseDoctor", "Doctor")'">+ Add Doctor</button>
                <button class="w3-btn-block w3-dark-grey" onclick="goBack()" new { id=doctor.doc.DoctorID }>- Back to List</button>

                <script>
                    function goBack() {
                        window.history.back();
                    }
                </script>

            </div>
        </div>
    }


    <br />
</body>
