@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Home Page</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <style>
                body {
            font: 20px Montserrat, sans-serif;
            line-height: 1.8;
            color: #f5f6f7;
        }

        p {
            font-size: 16px;
        }

        .margin {
            margin-bottom: 45px;
        }

        .bg-1 {
            background-color: cadetblue;
            color: #ffffff;
        }

        .bg-2 {
            background-color: midnightblue;
            color: #ffffff;
        }

        .bg-3 {
            background-color:white;
            color: #555555;
        }

        .bg-4 {
            background-color: darkslategray;
            color: #fff;
        }

        .container-fluid {
            padding-top: 70px;
            padding-bottom: 70px;
        }

        .navbar {
            padding-top: 15px;
            padding-bottom: 15px;
            border: 0;
            border-radius: 0;
            margin-bottom: 0;
            font-size: 12px;
            letter-spacing: 5px;
        }

        .navbar-nav li a:hover {
            color: #1abc9c !important;
        }
        .carousel-inner > .item > img,
        .carousel-inner > .item > a > img {
            width: 70%;
            margin: auto;
        }
    </style>
</head>
<body>
    <input id="HomepageCustomerId" type="hidden" value="@ViewBag.LayoutCustomerID"/>
    <!-- Navbar -->
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Homepage")">Cigma</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="@Url.Action("index", "Account")">
                            My Cigma
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("About", "Homepage")">
                            About
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Contact", "Homepage")">
                            Contact
                        </a>
                    </li>
                    <li>
                        <a id="LoginButton" value="0" href="/login/loginview">
                            Login
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- First Container -->
    <div class="container-fluid bg-3 text-center" style="margin-top:100px;">
        <h3 class="margin">Welcome to Cigma</h3><br>
        <div class="row">
            <div class="col-sm-4">
                <img src="~/images/globe-green-logo.png" class="img-responsive margin" style="margin:auto" alt="Image">
                <h3>Global Coverage Travels With You</h3>
                <p style="width:400px;margin:auto">Whenever you live and work, be prepared with intenational health insurance.</p>
                <label class="label label-info">Learn More</label>
            </div>
            <div class="col-sm-4">
                <img src="~/images/pill-bottle-green-logo.png" class="img-responsive margin" style="margin:auto" alt="Image">
                <h3>Switch To Home Delivery</h3>
                <p style="width:400px;margin:auto">Try Cigna delievery pharmacy and get medication right to your door.</p>
                <label class="label label-info">Learn More</label>            
            </div>
            <div class="col-sm-4">
                <img src="~/images/piggy-green-logo.png" class="img-responsive margin" style="margin:auto" alt="Image">
                <h3>Good Health = Financial Security</h3>
                <p style="width:400px;margin:auto">Get tips and special assistance for staying healthy without breaking the bank.</p>
                <label class="label label-info">Learn More</label>
            </div>
        </div>
    </div>


    <!-- Second Container -->
    <div class="container-fluid bg-2 text-center">
        <h3 class="margin">What do you want?</h3>
        <p>Health Insurance Options and More from Cigma. </p>
        <a href="/Doctor/FindADoctor" class="btn btn-default btn-lg">
            <span class="glyphicon glyphicon-search"></span> Look for a Doctor
        </a>
        <span class="glyphicon glyphicon-chevron-right"></span>
        <a href="/Account/DeclareClaim" class="btn btn-default btn-lg">
            <span class="glyphicon glyphicon-file"></span> Declare a Claim
        </a>
        <span class="glyphicon glyphicon-chevron-right"></span>
        <a href="/Account/Claims" class="btn btn-default btn-lg">
            <span class="glyphicon glyphicon-zoom-in"></span> Check a Claim
        </a>
        <span class="glyphicon glyphicon-chevron-right"></span>
        <a href="/Quote/AboutQuote" class="btn btn-default btn-lg">
            <span class="glyphicon glyphicon-shopping-cart"></span> Get a Quote
        </a>
    </div>

    <!-- Third Container (Grid) -->
    <div class="container-fluid bg-1 text-center">
        <h3 class="margin">Cigma Health Insurance</h3>
        <div class="container">
            <br>
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                    <li data-target="#myCarousel" data-slide-to="3"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <img src="~/images/67414344-doctor-wallpapers.jpg" alt="doc1" width="460" height="345">
                    </div>

                    <div class="item">
                        <img src="~/images/67791931-doctor-wallpapers.jpg" alt="doc2" width="460" height="345">
                    </div>

                    <div class="item">
                        <img src="~/images/67833082-doctor-wallpapers.jpg" alt="doc3" width="460" height="345">
                    </div>

                    <div class="item">
                        <img src="~/images/67932929-doctor-wallpapers.jpg" alt="doc4" width="460" height="345">
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="container-fluid bg-4 text-center">
        <p>&copy; 2016 - Cigma</p>
    </footer>

    <script>
        if ($("#HomepageCustomerId").val() == "") {
            //alert("guest");
            localStorage.clear();
            //alert(localStorage.getItem("customer"));
        }
        else {
            //alert($("#HomepageCustomerId").val());
            //Use temp data to set local value and keep in browse side 
            $("#LoginButton").attr("href", "/Homepage/Logout");
            document.getElementById("LoginButton").innerHTML = "Logout";
            localStorage.setItem("customer", $("#HomepageCustomerId").val());
            ///alert(localStorage.getItem("customer"));
        }
    </script>
</body>
</html>
