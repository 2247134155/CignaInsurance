
@{
    ViewBag.Title = "loginview";
}

<div class="container">

    
    <div class="row">


        <div class="col-md-6">
            <h2>login</h2>
        </div>


        <div class="col-md-6">

            @using (Html.BeginForm("preregistration", "login", FormMethod.Post))
            {
                <br />
                    <input id="fgt" class="btn btn-primary" type="submit" style="float: right; margin-top: -66px;" value="registrate" title="click to register" />

            }
        </div>

    </div>
    <div id="ShowErrorMessage">
