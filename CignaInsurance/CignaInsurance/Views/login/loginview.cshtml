                        <i class="lbl" id="psw"> Password: &nbsp; </i>
                        <input id="passwordid" class="txtbox" type="password" name="txtpassword" title="The Password" required />
                        <span class="label label-danger " id="sp2"></span>

                        <br />
                        <br />

                        <input id="smt" class="btn btn-primary btn-sm" type="submit" value="Login" title="Loging to your account" />
                        <br />
        }
        @using (Html.BeginForm("forgetpassword", "login", FormMethod.Post))
            {
            <input id="fgt" class="btn-link btn-sm" type="submit" value="forget Password" title="click here if you forgot your password" />
        }
        @using (Html.BeginForm("forgetusername", "login", FormMethod.Post))
            {
            <input id="fgt" class="btn-link btn-sm" type="submit" value="forget username" title="click here if you forgot your username" />
