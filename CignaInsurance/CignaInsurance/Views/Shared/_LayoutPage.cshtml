<html>
<head>
    <meta charset="utf-8" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Styles/LayoutPage.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/JQueryUI/jquery-ui.css" rel="stylesheet" />
    <script language="JavaScript" type="text/javascript" src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="http://code.jquery.com/jquery-2.1.1.min.js"> </script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrapvalidator.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Content/JQueryUI/jquery-ui.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Homepage/Index">Cigma</a>
            </div>

            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="@Url.Action("index", "Account")">
                            My Cigma
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("About", "Homepage")">
                            About
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Contact", "Homepage")">
                            Contact
                        </a>
                    </li>
                    <li>
                        <a id="LayoutCustomer" href="/login/loginview">
                            Login
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div>
        <div class="container body-content" style="margin-top:100px;margin-bottom:100px; ">
            <div style="float:left;">
                @RenderBody()
            </div>

            <div class="navbar navbar-right" style="float:right; margin-right:150px">
                @RenderSection("list", required: false)
            </div>

        </div>
        <footer class="container-fluid bg-4 text-center">
            <p>&copy; 2016 - Cigma</p>
        </footer>
    </div>

    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        if (localStorage.getItem("customer") !== null) {
            //alert("Customer");
            $("#LayoutCustomer").attr("href", "/Homepage/Logout");
            document.getElementById("LayoutCustomer").innerHTML = "Logout";
        }
        else {
            $("#LayoutCustomer").attr("href", "/login/loginview");
            document.getElementById("LayoutCustomer").innerHTML = "Login";
        }
    </script>
</body>

</html>

